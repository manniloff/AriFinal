<configuration scan="true" scanPeriod="60 seconds"> 
    <appender name="CONSOLE1" class="ch.qos.logback.core.ConsoleAppender"> 
        <layout class="ch.qos.logback.classic.PatternLayout"> 
            <Pattern>%d %level %logger.%M\(%line\) - %m%n</Pattern> 
        </layout> 
    </appender> 
